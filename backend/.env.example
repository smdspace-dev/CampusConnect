# Django environment variables
SECRET_KEY=your-secret-key-here-replace-with-strong-random-string
DEBUG=True
ALLOWED_HOSTS=127.0.0.1,localhost

# Database (SQLite for development, PostgreSQL for production)
DATABASE_URL=sqlite:///db.sqlite3
# For PostgreSQL use:
# DATABASE_URL=postgres://USER:PASSWORD@localhost:5432/college_management_db

# Email configuration (for local dev use console backend)
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_HOST_USER=your-email@example.com
EMAIL_HOST_PASSWORD=your-email-app-password
EMAIL_USE_TLS=True
DEFAULT_FROM_EMAIL=noreply@yourcollegeapp.com

# JWT Authentication
JWT_SECRET_KEY=your-jwt-secret-key-here
JWT_ACCESS_TOKEN_LIFETIME_MINUTES=60
JWT_REFRESH_TOKEN_LIFETIME_DAYS=7

# Google OAuth (for Google Classroom integration)
GOOGLE_OAUTH_CLIENT_ID=your-google-oauth-client-id.apps.googleusercontent.com
GOOGLE_OAUTH_CLIENT_SECRET=your-google-oauth-client-secret

# CORS settings
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Static files configuration
STATIC_URL=/static/
STATIC_ROOT=staticfiles/
MEDIA_URL=/media/
MEDIA_ROOT=media/

# Production settings (set these for production deployment)
# DEBUG=False
# SECURE_SSL_REDIRECT=True
# SECURE_HSTS_SECONDS=31536000
# SECURE_HSTS_INCLUDE_SUBDOMAINS=True
# SECURE_HSTS_PRELOAD=True
# SESSION_COOKIE_SECURE=True
# CSRF_COOKIE_SECURE=True
