# React Frontend Environment Variables

# Backend API URL (adjust port if Django runs on different port)
REACT_APP_API_URL=http://localhost:8000/api

# Google OAuth settings (for Google Classroom integration)
REACT_APP_GOOGLE_CLIENT_ID=your-google-oauth-client-id.apps.googleusercontent.com
REACT_APP_GOOGLE_API_KEY=your-google-api-key

# App configuration
REACT_APP_APP_NAME=College Management System
REACT_APP_VERSION=1.0.0

# Feature flags (set to 'true' or 'false')
REACT_APP_ENABLE_DARK_MODE=true
REACT_APP_ENABLE_NOTIFICATIONS=true
REACT_APP_ENABLE_GOOGLE_CLASSROOM=false

# Development settings
GENERATE_SOURCEMAP=true
REACT_APP_DEBUG_MODE=true

# Production settings (uncomment for production builds)
# GENERATE_SOURCEMAP=false
# REACT_APP_DEBUG_MODE=false
# REACT_APP_API_URL=https://your-production-api.com/api
